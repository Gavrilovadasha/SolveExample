<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Итого решено примеров"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="255dp"
            android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/SolveExamleCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginStart="370dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/SolveRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Правильно"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginStart="100dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/AnswerRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginStart="140dp"
        android:layout_marginTop="120dp" />


    <TextView
        android:id="@+id/SolveWrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Неправильно"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginStart="500dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/AnswerWrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginStart="560dp"
        android:layout_marginTop="120dp" />


    <TextView
        android:id="@+id/Statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0.00"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginStart="320dp"
        android:layout_marginTop="130dp" />

    <TextView
        android:id="@+id/StatisticsProzent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="%"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginStart="430dp"
        android:layout_marginTop="130dp" />

    <RelativeLayout
        android:id="@+id/exampleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Operand1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            android:layout_marginTop="220dp" />

        <TextView
            android:id="@+id/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="220dp" />

        <TextView
            android:id="@+id/Operand2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="220dp" />

        <TextView
            android:id="@+id/Equally"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginStart="490dp"
            android:layout_marginTop="220dp" />

        <EditText
            android:id="@+id/edtAnswer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="580dp"
            android:textSize="40dp"
            android:hint="00"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btnCheck"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:text="Проверка"
        app:cornerRadius = "10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="380dp"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:text="Старт"
        android:textColor="@color/white"
        app:cornerRadius = "10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>